@model LogisticSolutions.Models.Delivery

@{
    ViewBag.Title = "Zleć odbiór przesyłki";
}

<h2>Zleć odbiór przesyłki</h2>

@using (Html.BeginForm("AddDelivery", "Delivery", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(d => d.PickupAddress, "Adres odbioru:", new {@class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(d => d.PickupAddress, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(d => d.DestinatonAddress, "Adres dostawy:", new {@class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(d => d.DestinatonAddress, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Zatwierdź</button>
        </div>
    </div>
}


