@model System.Collections.Generic.IEnumerable<LogisticSolutions.Models.Delivery>

@{
    ViewBag.Title = "title";
}

<h2>Przesyłki do odebrania</h2>

<table>
    @foreach (var delivery in Model)
    {
        <tr>
            <th>Nr przesyłki:</th>
            <th>Adres:</th>
            <th>Miasto:</th>
            <th>Kod pocztowy:</th>
            <th>Akcja:</th>
        </tr>
        <tr>
            <td>@delivery.Number</td>
            <td>@delivery.PickupAddress.AddressLine1 @delivery.PickupAddress.AddressLine2</td>
            <td>@delivery.PickupAddress.City</td>
            <td>@delivery.PickupAddress.PostalCode</td>
            <td>@Ajax.ActionLink("Zrób odbiór", "Receipt", new {Controller = "Courier", deliveryId = delivery.Number}, new AjaxOptions() {HttpMethod = "POST"})</td>
            <td>@Ajax.ActionLink("Zdaj na magazyn", "PassToWarehouse", new {Controller = "Courier", deliveryId = delivery.Number}, new AjaxOptions() {HttpMethod = "POST"})</td>
            <td>@Ajax.ActionLink("Pobierz z magazynu", "PickFromWarehouse", new {Controller = "Courier", deliveryId = delivery.Number}, new AjaxOptions() {HttpMethod = "POST"})</td>
            <td>@Ajax.ActionLink("Wydaj odbiorcy", "Deliver", new { Controller = "Courier", deliveryId = delivery.Number }, new AjaxOptions() { HttpMethod = "POST" })</td>
        </tr>
    }
</table>