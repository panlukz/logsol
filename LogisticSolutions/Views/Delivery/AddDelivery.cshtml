            @Html.LabelFor(d => d.PickupAddress.Name, "Nazwa odbiorcy:", new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(d => d.PickupAddress.Name, new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(d => d.PickupAddress.Phone, "Telefon:", new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(d => d.PickupAddress.Phone, new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(d => d.PickupAddress.Email, "Email:", new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(d => d.PickupAddress.Email, new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(d => d.PickupAddress.ContactPerson, "Osoba kontaktowa:", new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(d => d.PickupAddress.ContactPerson, new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(d => d.PickupAddress.AddressLine1, "Adres l1:", new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(d => d.PickupAddress.AddressLine1, new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(d => d.PickupAddress.AddressLine2, "Adres l2:", new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(d => d.PickupAddress.AddressLine2, new {@class = "form-control"})
