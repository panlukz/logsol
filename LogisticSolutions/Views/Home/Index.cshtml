@{
    ViewBag.Title = "Home Page";
}


<!-- Intro Header -->
<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="brand-heading">Logistics Solutions</h1>
                    <p class="intro-text">Twoja lokalizacja: @ViewBag.UserLocation</p>
                    <div class="button_sliding_bg">Załóż konto</div>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="container body-content">
    <div class="row tables">
        <div class="col-md-4">
            <div class="box first">
                <h2>Co z moją przesyłką?</h2>
                <p>
                    W momencie nadania paczki przez nadawcę, otrzymasz specjalny komunikat mailowy.
